<!DOCTYPE html>
<html class="h-full" data-controller="theme">
  <head>
    <title>Dategent</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="#4f46e5">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="h-full bg-gray-50 dark:bg-gray-900 text-gray-900 dark:text-gray-100 antialiased">
    <% if user_signed_in? %>
      <%# Top bar - desktop only %>
      <header class="hidden md:block bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700 sticky top-0 z-40">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex items-center justify-between h-16">
            <div class="flex items-center gap-8">
              <%= link_to dashboard_path, class: "flex items-center gap-2" do %>
                <span class="text-xl font-bold bg-gradient-to-r from-indigo-600 to-pink-500 bg-clip-text text-transparent">Dategent</span>
              <% end %>
              <nav class="flex items-center gap-6">
                <%= link_to "Dashboard", dashboard_path, class: "text-sm font-medium #{current_page?(dashboard_path) ? 'text-indigo-600 dark:text-indigo-400' : 'text-gray-600 dark:text-gray-300 hover:text-indigo-600'}" %>
                <%= link_to "Matches", matches_path, class: "text-sm font-medium #{current_page?(matches_path) ? 'text-indigo-600 dark:text-indigo-400' : 'text-gray-600 dark:text-gray-300 hover:text-indigo-600'}" %>
                <%= link_to "My Agent", agent_path, class: "text-sm font-medium #{current_page?(agent_path) ? 'text-indigo-600 dark:text-indigo-400' : 'text-gray-600 dark:text-gray-300 hover:text-indigo-600'}" %>
                <%= link_to "Profile", profile_path, class: "text-sm font-medium #{current_page?(profile_path) ? 'text-indigo-600 dark:text-indigo-400' : 'text-gray-600 dark:text-gray-300 hover:text-indigo-600'}" %>
              </nav>
            </div>
            <div class="flex items-center gap-4">
              <button data-action="theme#toggle" class="p-2 rounded-lg text-gray-500 hover:bg-gray-100 dark:hover:bg-gray-700" title="Toggle dark mode">
                <svg class="w-5 h-5 dark:hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"/></svg>
                <svg class="w-5 h-5 hidden dark:block" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"/></svg>
              </button>
              <span class="text-sm text-gray-500 dark:text-gray-400"><%= current_user.first_name %></span>
              <%= link_to "Sign Out", destroy_user_session_path, data: { turbo_method: :delete }, class: "text-sm font-medium text-red-600 hover:text-red-700" %>
            </div>
          </div>
        </div>
      </header>

      <%# Mobile top bar %>
      <header class="md:hidden bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700 sticky top-0 z-40">
        <div class="flex items-center justify-between px-4 h-14">
          <span class="text-lg font-bold bg-gradient-to-r from-indigo-600 to-pink-500 bg-clip-text text-transparent">Dategent</span>
          <div class="flex items-center gap-3">
            <button data-action="theme#toggle" class="p-2 rounded-lg text-gray-500 hover:bg-gray-100 dark:hover:bg-gray-700">
              <svg class="w-5 h-5 dark:hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"/></svg>
              <svg class="w-5 h-5 hidden dark:block" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"/></svg>
            </button>
            <%= link_to destroy_user_session_path, data: { turbo_method: :delete }, class: "p-2 rounded-lg text-gray-500 hover:bg-gray-100 dark:hover:bg-gray-700" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/></svg>
            <% end %>
          </div>
        </div>
      </header>

      <%# Main content %>
      <main class="pb-20 md:pb-8">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
          <% if notice.present? %>
            <div class="mb-4 rounded-lg bg-green-50 dark:bg-green-900/30 border border-green-200 dark:border-green-800 p-4">
              <p class="text-sm text-green-800 dark:text-green-200"><%= notice %></p>
            </div>
          <% end %>
          <% if alert.present? %>
            <div class="mb-4 rounded-lg bg-red-50 dark:bg-red-900/30 border border-red-200 dark:border-red-800 p-4">
              <p class="text-sm text-red-800 dark:text-red-200"><%= alert %></p>
            </div>
          <% end %>
          <%= yield %>
        </div>
      </main>

      <%# Bottom navigation - mobile only %>
      <nav class="md:hidden fixed bottom-0 inset-x-0 bg-white dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700 z-50 safe-area-bottom">
        <div class="flex items-center justify-around h-16 px-2">
          <%= link_to dashboard_path, class: nav_link_classes(dashboard_path) do %>
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/></svg>
            <span>Home</span>
          <% end %>
          <%= link_to matches_path, class: nav_link_classes(matches_path) do %>
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/></svg>
            <span>Matches</span>
          <% end %>
          <%= link_to agent_path, class: nav_link_classes(agent_path) do %>
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
            <span>Agent</span>
          <% end %>
          <%= link_to profile_path, class: nav_link_classes(profile_path) do %>
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/></svg>
            <span>Profile</span>
          <% end %>
        </div>
      </nav>
    <% else %>
      <%# Guest layout %>
      <main class="min-h-screen flex items-center justify-center px-4">
        <div class="w-full max-w-md">
          <% if notice.present? %>
            <div class="mb-4 rounded-lg bg-green-50 dark:bg-green-900/30 border border-green-200 dark:border-green-800 p-4">
              <p class="text-sm text-green-800 dark:text-green-200"><%= notice %></p>
            </div>
          <% end %>
          <% if alert.present? %>
            <div class="mb-4 rounded-lg bg-red-50 dark:bg-red-900/30 border border-red-200 dark:border-red-800 p-4">
              <p class="text-sm text-red-800 dark:text-red-200"><%= alert %></p>
            </div>
          <% end %>
          <%= yield %>
        </div>
      </main>
    <% end %>
  </body>
</html>
