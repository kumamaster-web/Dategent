<div class="max-w-2xl mx-auto">
  <%# Profile Header Card %>
  <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-sm border border-gray-200 dark:border-gray-700 overflow-hidden">
    <div class="h-32 bg-gradient-to-r from-indigo-500 to-pink-500"></div>
    <div class="px-6 pb-6">
      <div class="-mt-16 flex items-end gap-4">
        <div class="w-28 h-28 rounded-2xl border-4 border-white dark:border-gray-800 bg-gray-200 dark:bg-gray-700 overflow-hidden shadow-lg flex-shrink-0">
          <% if @user.photo.attached? && @user.photo.blob&.persisted? %>
            <%= image_tag @user.photo, class: "w-full h-full object-cover" %>
          <% else %>
            <div class="w-full h-full flex items-center justify-center text-gray-400 dark:text-gray-500">
              <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/></svg>
            </div>
          <% end %>
        </div>
        <div class="pb-2">
          <h1 class="text-2xl font-bold text-gray-900 dark:text-gray-100"><%= @user.full_name %></h1>
          <p class="text-sm text-gray-500 dark:text-gray-400">
            <% if @user.city.present? && @user.country.present? %>
              <%= @user.city %>, <%= @user.country %>
            <% elsif @user.city.present? || @user.country.present? %>
              <%= @user.city || @user.country %>
            <% else %>
              Location not set
            <% end %>
            <% if @user.age %>
              &middot; <%= @user.age %> years old
            <% end %>
          </p>
        </div>
      </div>

      <% if @user.bio.present? %>
        <p class="mt-4 text-gray-700 dark:text-gray-300 text-sm leading-relaxed"><%= @user.bio %></p>
      <% end %>

      <div class="mt-4 flex gap-2">
        <%= link_to edit_profile_path, class: "inline-flex items-center gap-2 bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-medium py-2.5 px-4 rounded-lg transition-colors" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/></svg>
          Edit Profile
        <% end %>
        <%= link_to user_preference_path, class: "inline-flex items-center gap-2 bg-white dark:bg-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600 text-gray-700 dark:text-gray-300 text-sm font-medium py-2.5 px-4 rounded-lg border border-gray-300 dark:border-gray-600 transition-colors" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"/></svg>
          Preferences
        <% end %>
      </div>
    </div>
  </div>

  <%# Profile Details %>
  <div class="mt-6 bg-white dark:bg-gray-800 rounded-2xl shadow-sm border border-gray-200 dark:border-gray-700 p-6">
    <h2 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-4">About Me</h2>
    <div class="grid grid-cols-2 gap-4">
      <div class="space-y-3">
        <div>
          <p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Pronouns</p>
          <p class="text-sm text-gray-900 dark:text-gray-100 mt-0.5"><%= @user.pronouns || "Not set" %></p>
        </div>
        <div>
          <p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Gender</p>
          <p class="text-sm text-gray-900 dark:text-gray-100 mt-0.5"><%= @user.gender&.titleize || "Not set" %></p>
        </div>
        <div>
          <p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Height</p>
          <p class="text-sm text-gray-900 dark:text-gray-100 mt-0.5"><%= @user.height ? "#{@user.height} cm" : "Not set" %></p>
        </div>
        <div>
          <p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Birthday</p>
          <p class="text-sm text-gray-900 dark:text-gray-100 mt-0.5"><%= @user.date_of_birth&.strftime("%B %d, %Y") || "Not set" %></p>
        </div>
      </div>
      <div class="space-y-3">
        <div>
          <p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Education</p>
          <p class="text-sm text-gray-900 dark:text-gray-100 mt-0.5"><%= @user.education || "Not set" %></p>
        </div>
        <div>
          <p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Occupation</p>
          <p class="text-sm text-gray-900 dark:text-gray-100 mt-0.5"><%= @user.occupation || "Not set" %></p>
        </div>
        <div>
          <p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Zodiac Sign</p>
          <p class="text-sm text-gray-900 dark:text-gray-100 mt-0.5"><%= @user.zodiac_sign || "Not set" %></p>
        </div>
        <div>
          <p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">MBTI</p>
          <p class="text-sm text-gray-900 dark:text-gray-100 mt-0.5"><%= @user.mbti || "Not set" %></p>
        </div>
      </div>
    </div>
  </div>
</div>
