<div class="max-w-2xl mx-auto space-y-6">

  <%# ===== HERO CARD ===== %>
  <div class="bg-white dark:bg-gray-800 rounded-2xl overflow-hidden shadow-sm border border-gray-200 dark:border-gray-700">

    <%# --- Centered photo --- %>
    <div class="pt-10 pb-6 flex justify-center">
      <div class="relative">
        <% if @user.photo.attached? && @user.photo.blob&.persisted? %>
          <%= image_tag @user.photo,
                class: "w-36 h-36 sm:w-40 sm:h-40 rounded-2xl object-cover border-2 border-gray-200 dark:border-gray-700 shadow-lg" %>
        <% else %>
          <div class="w-36 h-36 sm:w-40 sm:h-40 rounded-2xl bg-gray-200 dark:bg-gray-700 border-2 border-gray-200 dark:border-gray-700 shadow-lg flex items-center justify-center">
            <span class="text-5xl sm:text-6xl font-bold text-gray-400 dark:text-gray-500"><%= @user.first_name&.first&.upcase %></span>
          </div>
        <% end %>
      </div>
    </div>

    <%# --- Name, bio, actions --- %>
    <div class="px-6 pb-6 text-center">
      <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-gray-100"><%= @user.full_name %></h1>
      <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">
        <% if @user.city.present? && @user.country.present? %>
          <%= @user.city %>, <%= @user.country %>
        <% elsif @user.city.present? || @user.country.present? %>
          <%= @user.city || @user.country %>
        <% else %>
          Location not set
        <% end %>
        <% if @user.age %>
          &middot; <%= @user.age %> years old
        <% end %>
      </p>

      <% if @user.bio.present? %>
        <p class="mt-4 text-gray-700 dark:text-gray-300 text-sm sm:text-base leading-relaxed max-w-md mx-auto"><%= @user.bio %></p>
      <% end %>

      <div class="flex justify-center gap-3 mt-12">
        <%= link_to edit_profile_path, class: "inline-flex items-center gap-2 bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-medium py-2.5 px-5 rounded-xl transition-colors" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/></svg>
          Edit Profile
        <% end %>
        <%= link_to user_preference_path, class: "inline-flex items-center gap-2 bg-white dark:bg-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600 text-gray-700 dark:text-gray-300 text-sm font-medium py-2.5 px-5 rounded-xl border border-gray-300 dark:border-gray-600 transition-colors" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"/></svg>
          Preferences
        <% end %>
      </div>
    </div>
  </div>

  <%# ===== ABOUT ME ===== %>
  <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-sm border border-gray-200 dark:border-gray-700 p-6">
    <h2 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-4">About Me</h2>

    <div class="grid grid-cols-2 gap-x-6 gap-y-4">
      <% [
        ["Pronouns",    @user.pronouns],
        ["Education",   @user.education],
        ["Gender",      @user.gender&.titleize],
        ["Occupation",  @user.occupation],
        ["Height",      @user.height.present? ? "#{@user.height} cm" : nil],
        ["Zodiac Sign", @user.zodiac_sign],
        ["Birthday",    @user.date_of_birth.present? ? @user.date_of_birth.strftime("%B %d, %Y") : nil],
        ["MBTI",        @user.mbti],
        ["Language",    @user.language],
      ].each do |label, value| %>
        <div>
          <p class="text-xs font-semibold uppercase tracking-wider <%= value.present? ? 'text-indigo-500 dark:text-indigo-400' : 'text-gray-400 dark:text-gray-500' %>"><%= label %></p>
          <p class="text-sm mt-0.5 <%= value.present? ? 'text-gray-900 dark:text-gray-100' : 'text-gray-400 dark:text-gray-500' %>"><%= value || "Not set" %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
